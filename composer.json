{
  "name": "ewald/advent-of-code2025",
  "autoload": {
    "psr-4": {
      "Ewald\\AdventOfCode2025\\": "src/",
      "Ewald\\AdventOfCode2025\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Ewald BÃ¶rger",
      "email": "ewald.borger@novoserve.com"
    }
  ],
  "require-dev": {
    "php": "8.4",
    "carthage-software/mago": "^1.0.0-rc.6",
    "phpunit/phpunit": "^12.4"
  },
  "config": {
    "allow-plugins": {
      "carthage-software/mago": true
    },
    "platform": {
      "php": "8.4"
    }
  },
  "scripts": {
    "code:baselines": [
      "mago lint --generate-baseline",
      "mago analyze --generate-baseline"
    ],
    "code:check:lint": "mago lint",
    "code:check:analyze": "mago analyze",
    "code:check:style": "mago format --dry-run",
    "code:check": [
      "@code:check:lint",
      "@code:check:analyze",
      "@code:check:style"
    ],
    "code:fix:lint": "mago lint --fix",
    "code:fix:analyze": "mago analyze --fix",
    "code:fix:style": "mago format",
    "code:fix": [
      "@code:fix:lint",
      "@code:fix:analyze",
      "@code:fix:style"
    ],
    "test:unit": "phpunit --configuration phpunit.dist.xml --testdox"
  }
}
